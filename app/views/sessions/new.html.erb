<% if session[:user] %>
  <div class="min-h-screen flex items-center justify-center bg-green-100 p-6">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full sm:w-1/2 md:w-1/3">
      <h1 class="text-3xl font-semibold text-center text-green-700">Welcome, <%= session[:user][:name] %>!</h1>
      <div class="flex justify-center mt-4">
        <img src="<%= session[:user][:image] %>" alt="User Image" class="rounded-full w-32 h-32 object-cover">
      </div>
      <p class="mt-4 text-center text-green-600">Email: <%= session[:user][:email] %></p>
      <div class="mt-6 text-center">
        <%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false }, class: 'bg-green-500 text-white py-2 px-6 rounded-lg hover:bg-green-600' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="min-h-screen flex items-center justify-center bg-green-100 p-6">
    <div class="bg-white p-8 rounded-lg w-full pt-12 sm:w-1/2 md:w-1/3">
      <h1 class="text-3xl font-semibold text-center text-green-700">ログインしてください！！</h1>
      <div class="mt-6 text-center">
        <%= button_to 'ログイン', '/auth/auth0', method: :post, data: { turbo: false }, class: 'bg-green-100 text-white py-2 px-6 rounded-lg hover:bg-green-600' %>
      </div>
    </div>
  </div>
<% end %>