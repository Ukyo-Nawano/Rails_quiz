<div>
  <%= f.label :content, "質問内容", class: "block text-lg font-semibold" %>
  <%= f.text_field :content, class: "w-full p-3 border rounded-lg", placeholder: "質問内容" %>
</div>

<div class="mb-4">
  <h3 class="text-lg font-semibold">選択肢を追加</h3>
  <div>
    <%= f.fields_for :choices do |cf| %>
      <div class="choice-fields mb-4">
        <%= render 'choice_fields', f: cf %>
      </div>
    <% end %>
  </div>
  <button type="button" class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 add-choice">選択肢を追加</button>
</div>

<button type="button" class="remove-question text-red-500 hover:text-red-700 mt-2">この質問を削除</button>
