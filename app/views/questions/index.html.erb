<h1 class="font-bold text-2xl text-center pt-24 text-green-100"><%= @quiz.title %> の質問一覧</h1>
<div class="flex flex-wrap">
<% @questions.each do |question| %>
    <div class="w-full p-4">
    <p class="font-bold">質問: <%= question.content %></p>
    <p>選択肢:</p>
    <ul>
        <% question.choices.each do |choice| %>
        <li><%= choice.name %></li>
        <% end %>
    </ul>
    </div>
<% end %>
</div>
