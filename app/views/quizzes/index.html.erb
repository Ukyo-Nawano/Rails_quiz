<h1 class="font-bold text-2xl text-center pt-24 text-green-100">みんなのクイズ一覧</h1>
<div class="flex flex-wrap">
  <% @quizzes.each do |quiz| %>
    <div class="w-1/3">
      <%= link_to overview_quiz_path(quiz) do %>
        <%= image_tag quiz.image, alt: "milmil", class: "w-1/5" %>
        <p><%= quiz.title %></p>
      <p>作成者: <%= quiz.user.name %></p>
      <p>タグ:
        <% quiz.tags.each do |tag| %>
          <span class="tag"><%= tag.tag %></span>
        <% end %>
      </p>
      <%= link_to "クイズを始める", overview_quiz_path(quiz), class: "bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600" %>
      <% end %>
    </div>
  <% end %>
</div>



